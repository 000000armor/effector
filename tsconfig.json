{
  "compilerOptions": {
    "strictNullChecks": true,
    "module": "es2015",
    "target": "esnext",
    "jsx": "react",
    "allowJs": false,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": ["dom", "esnext"],
    "baseUrl": ".",
    "paths": {
      "effector/fork": ["packages/effector/fork.d.ts"],
      "effector": ["packages/effector"],
      "effector-react/ssr": ["packages/effector-react/ssr.d.ts"],
      "effector-react": ["packages/effector-react"],
      "effector-dom": ["packages/effector-dom"],
      "forest": ["packages/effector-dom"],
      "effector-vue": ["packages/effector-vue"]
    }
  },
  "exclude": [
    "./dist",
    "./coverage",
    "./docs",
    "./examples",
    "./npm",
    "./recipes",
    "./stats",
    "./website"
  ]
}
