{
  "compilerOptions": {
    "strictNullChecks": true,
    "module": "es2015",
    "target": "esnext",
    "jsx": "react",
    "allowJs": false,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": ["dom", "esnext"],
    "baseUrl": ".",
    "paths": {
      "effector/fork": ["packages/effector/fork.d.ts"],
      "effector/fixtures/prettyHtml": ["src/fixtures/prettyHtml.d.ts"],
      "effector/fixtures": ["src/fixtures/index.d.ts"],
      "effector": ["packages/effector/index.d.ts"],
      "effector-react/ssr": ["packages/effector-react/ssr.d.ts"],
      "effector-react": ["packages/effector-react/index.d.ts"],
      "effector-dom": ["packages/effector-dom/index.d.ts"],
      "forest/server": ["packages/effector-dom/server.d.ts"],
      "forest": ["packages/effector-dom/index.d.ts"],
      "effector-vue": ["packages/effector-vue/index.d.ts"]
    }
  },
  "exclude": [
    "./dist",
    "./coverage",
    "./docs",
    "./examples",
    "./npm",
    "./recipes",
    "./stats",
    "./website"
  ]
}
