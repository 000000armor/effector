---
import {
  getPathParamsFromId,
  getTextLocalized,
  KNOWN_LANGUAGE_CODES,
  translations,
} from "../../languages";
import { KNOWN_LANGUAGES, SITE, COMMUNITY_INVITE_URL } from "../../consts";

import SkipToContent from "./SkipToContent.astro";
import EffectorLogo from "./EffectorLogo.astro";
import Search from "./Search";
import NavMenu from "../NavMenu.astro";
import ThemeToggle from "./ThemeToggleButton";

type Props = {
  currentPage: string;
};

const { lang, slug } = getPathParamsFromId(Astro.url.pathname);
const languageLinks = Object.entries(KNOWN_LANGUAGES).map(([name, code]) => ({
  text: { en: name },
  href: slug === "/" ? `/${code}` : `/${code}/${slug}`,
}));
const homeLink = lang === "en" ? "/" : `/${lang}`;

const docsVersions = [
  { text: { en: "beta (current)" }, href: "/" },
  { text: { en: "v22.x (actual)" }, href: "https://effector.dev" },
  { text: { en: "v21.x" }, href: "https://v21.effector.dev" },
  { text: { en: "v20.x" }, href: "https://v20.effector.dev" },
];
---

<header>
  <SkipToContent />

  <nav>
    <a class="logo" href={homeLink}>
      <EffectorLogo size={40} />
      <span>{SITE.title ?? getTextLocalized(translations.Documentation, lang)}</span>
    </a>
    <div class="mr-auto">
      <Search client:idle />
    </div>
    <div class="link">Getting started</div>
    <div class="link active">
      <span>API</span>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="icon icon-tabler icon-tabler-chevron-down"
        width="18"
        height="18"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        fill="none"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
        <polyline points="6 9 12 15 18 9"></polyline>
      </svg>
    </div>
    <a href="https://patreon.com/zero__bias" target="_blank" class="link only-medium">
      <span>Blog</span>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="18"
        height="18"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        fill="none"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
        <line x1="17" y1="7" x2="7" y2="17"></line>
        <polyline points="8 7 17 7 17 16"></polyline>
      </svg>
    </a>
    <a href="https://share.effector.dev" target="_blank" class="link"> Playground</a>
    <a href="https://changelog.effector.dev" target="_blank" class="link only-medium">
      <span>Changelog</span>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="18"
        height="18"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        fill="none"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
        <line x1="17" y1="7" x2="7" y2="17"></line>
        <polyline points="8 7 17 7 17 16"></polyline>
      </svg>
    </a>
    <div class="only-medium">
      <NavMenu links={docsVersions}>v22.x</NavMenu>
    </div>
    <div class="only-medium">
      <NavMenu links={languageLinks}>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          fill="none"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
          <path d="M4 5h7"></path>
          <path d="M9 3v2c0 4.418 -2.239 8 -5 8"></path>
          <path d="M5 9c-.003 2.144 2.952 3.908 6.7 4"></path>
          <path d="M12 20l4 -9l4 9"></path>
          <path d="M19.1 18h-6.2"></path>
        </svg>
      </NavMenu>
    </div>
    <ThemeToggle client:idle />
    <svg
      class="only-medium"
      role="img"
      width="20"
      viewBox="0 0 24 24"
      xmlns="http://www.w3.org/2000/svg"
    >
      <title>GitHub</title>
      <path
