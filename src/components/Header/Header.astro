---
import {
  getPathParamsFromId,
  getTextLocalized,
  KNOWN_LANGUAGE_CODES,
  translations,
} from "../../languages";
import { KNOWN_LANGUAGES, SITE } from "../../consts";

import EffectorLogo from "./EffectorLogo.astro";
import SkipToContent from "./SkipToContent.astro";
import SidebarToggle from "./SidebarToggle";
import Search from "./Search";
import ThemeToggleButton from "./ThemeToggleButton";
import NavMenu from "../NavMenu.astro";

type Props = {
  currentPage: string;
};

const { lang, slug } = getPathParamsFromId(Astro.url.pathname);
const languageLinks = Object.entries(KNOWN_LANGUAGES).map(([name, code]) => ({
  text: { en: name },
  href: slug === "/" ? `/${code}` : `/${code}/${slug}`,
}));
---

<header>
  <SkipToContent />
  <nav class="nav-wrapper">
    <div class="menu-toggle">
      <SidebarToggle client:idle />
    </div>
    <div class="logo">
      <a href="/">
        <EffectorLogo size={40} />
        <div class="title">{SITE.title ?? getTextLocalized(translations.Documentation, lang)}</div>
      </a>
      <div class="search-item">
        <Search client:idle />
      </div>
    </div>
    <div style="flex-grow: 1;"></div>
    <NavMenu
      links={[
        {
          text: { en: "Introduction", ru: "Введение" },
          href: `/${lang}/introduction/installation`,
        },
        {
          text: { en: "Recipes", ru: "Рецепты" },
          href: `/${lang}/recipes`,
        },
        {
          text: { en: "Blog", ru: "Блог" },
          href: `https://www.patreon.com/zero_bias`,
        },
        {
          text: { en: "Changelog", ru: "Список изменений" },
          href: `https://changelog.effector.dev`,
        },
        {
          text: { en: "API" },
          links: [
            { text: { en: "Effector" }, href: `/${lang}/api/effector` },
            { text: { en: "Effector React" }, href: `/${lang}/api/effector-react` },
            { text: { en: "Effector Solid" }, href: `/${lang}/api/effector-solid` },
            { text: { en: "Effector Vue" }, href: `/${lang}/api/effector-vue` },
          ],
        },
      ]}
    >
      {getTextLocalized(translations.docs, lang)}
    </NavMenu>
    <hr />
    {
      KNOWN_LANGUAGE_CODES.length > 1 && (
        <NavMenu links={languageLinks}>
          <svg
            aria-hidden="true"
            focusable="false"
            role="img"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 88.6 77.3"
            height="20px"
            width="20px"
          >
            <path
              fill="currentColor"
              d="M61,24.6h7.9l18.7,51.6h-7.7l-5.4-15.5H54.3l-5.6,15.5h-7.2L61,24.6z M72.6,55l-8-22.8L56.3,55H72.6z"
            />
            <path
              fill="currentColor"
              d="M53.6,60.6c-10-4-16-9-22-14c0,0,1.3,1.3,0,0c-6,5-20,13-20,13l-4-6c8-5,10-6,19-13c-2.1-1.9-12-13-13-19h8          c4,9,10,14,10,14c10-8,10-19,10-19h8c0,0-1,13-12,24l0,0c5,5,10,9,19,13L53.6,60.6z M1.6,16.6h56v-8h-23v-7h-9v7h-24V16.6z"
            />
          </svg>
        </NavMenu>
      )
    }
    <ThemeToggleButton client:visible />

    <div style="color: var(--theme-text-light); display: flex; gap: 0.8rem;">
      <svg role="img" width="20" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <title>GitHub</title>
