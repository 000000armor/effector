<style>
  body {
    --header-max-width: 100rem;
  }

  .landing {
    margin-top: var(--theme-navbar-height);
  }

  .hero {
    @apply mx-5 mt-12 mb-20 flex flex-col justify-center gap-6;
  }

  .hero .title {
    -webkit-box-decoration-break: clone;
    -webkit-text-fill-color: transparent;
    color: unset;
    letter-spacing: -0.02em;
    background: linear-gradient(to right bottom, var(--theme-text-light) 30%, var(--theme-text));
    -webkit-background-clip: text;
    font-family: "Lexend Deca";

    @apply m-0 max-w-full p-0 text-center text-5xl font-bold;
    line-height: 1;
  }

  .hero .subtitle {
    -webkit-box-decoration-break: clone;
    -webkit-text-fill-color: transparent;
    color: unset;
    letter-spacing: -0.02em;
    background: linear-gradient(to right bottom, var(--theme-text-light) 30%, var(--theme-text));
    -webkit-background-clip: text;
    font-family: "Lexend Deca";

    @apply m-0 p-0 text-center text-2xl font-medium;
    line-height: 1.3;
  }

  .hero .description {
    @apply text-center text-base;
  }

  .hero .links {
    @apply flex justify-center;
  }

  .hero a.primary {
    background: linear-gradient(170deg, hsl(var(--color-primary-70)), hsl(var(--color-primary-50)));
    color: var(--theme-bg);
    text-shadow: var(--theme-text-accent) 0px 1px 0px;

    @apply flex rounded-3xl py-2 pl-6 pr-4 text-base transition-shadow hover:shadow-md;
  }

  /* Some shit happens with tailwind, and order of md/lg rules is changed */
  @media (min-width: 768px) {
    .hero .title {
      @apply text-6xl;
    }

    .hero .subtitle {
      @apply text-4xl;
      line-height: 1.5;
    }

    .hero .description {
      @apply text-lg;
    }

    .hero a.primary {
      @apply text-lg;
    }
  }

  @media (min-width: 1024px) {
    .hero {
      @apply mt-24 mb-32;
    }

    .hero .title {
      @apply text-8xl;
    }

    .hero .subtitle {
      @apply text-5xl;
      line-height: 1.5;
    }

    .hero .description {
      @apply text-xl;
    }
  }

  /* ==== FEATURES ==== */

  .features {
  }

  .features .wrapper {
    @apply mx-auto grid min-h-[680px] w-full max-w-6xl grid-cols-2 gap-3 p-3 sm:gap-6 sm:p-6 md:grid-cols-3 md:grid-rows-3;
  }

  .features article {
    @apply z-10 flex flex-col gap-3 rounded-2xl p-3 text-center shadow-lg transition-shadow duration-500 hover:shadow-xl sm:gap-4 sm:rounded-3xl sm:p-4;
    background-color: var(--theme-card);
  }

  .features article .emoji {
    @apply flex h-16 w-16 items-center justify-center self-center text-4xl;
  }

  .features article .title {
    @apply text-xl sm:text-2xl;
  }

  .features article p {
    @apply text-sm sm:text-base;
    color: var(--theme-text);
  }

  .features article.major {
    @apply row-span-2;
    /* background-image: linear-gradient(var(--theme-text-accent), var(--theme-bg)); */
    background-image: radial-gradient(
      circle at 50% 30%,
      hsla(var(--color-primary-50), 0.4),
      hsla(var(--color-primary-80), 0.3) 25%,
      var(--theme-bg) 90%
    );
  }
  .features article.major .emoji {
    @apply h-[50%] w-full text-8xl md:h-[60%];
  }
  .features article.major .title {
    @apply text-2xl md:text-3xl;
  }

  .features article.minor {
    @apply md:col-span-2;
  }
  .features article.minor p {
    @apply mx-auto max-w-[50ch];
  }
</style>
