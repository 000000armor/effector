---
import { SITE } from "../consts";
import CommonLayout from "../layouts/CommonLayout.astro";
import IconChevron from "../icons/Chevron.astro";
---

<CommonLayout lang={SITE.defaultLanguage} title="Welcome" dir="ltr" description={SITE.description}>
  <div class="landing">
    <section class="hero">
      <div class="title">effector</div>
      <div class="subtitle">Write business logic with ease</div>
      <p class="description">
        Meet the new standard for modern TypeScript development.
        <br />
        Type safe, reactive, framework agnostic.
      </p>
      <div class="links">
        <a class="primary" href="/en/introduction/installation">
          <span>Getting started</span>
          <IconChevron />
        </a>
      </div>
    </section>

    <section class="features">
      {
        [
          {
            emoji: "🛡️",
            title: "Type safe",
            description:
              "Excellent TypeScript support out of the box. With the type testing in the repository.",
          },
          {
            emoji: "⚙️",
            title: "Framework agnostic",
            description: "Works with any UI or server framework. Tested with React, Solid, Vue.",
          },
          {
            emoji: "🧑‍💻",
            title: "Developer-friendly",
            description:
              "Simple API surface with helpful community. Core-team reduces amount of methods to lear.",
          },
          {
            emoji: "⚡️",
            title: "Performant",
            description:
              "Initialization of the whole logic at the app start provides a boost at the runtime.",
          },
          {
            emoji: "📦",
            title: "10Kb",
            description:
              "Effector supports tree-shaking and provides maximum opportunities with the small size.",
          },
          {
            emoji: "🫂",
            title: "Just JavaScript",
            description:
              "There is no Proxies, classes and some magic inside. Just JavaScript code that works.",
          },
        ].map((feat) => (
          <article>
            <div class="emoji">{feat.emoji}</div>
            <div class="title">{feat.title}</div>
            <p>{feat.description}</p>
          </article>
        ))
      }
    </section>
  </div>
</CommonLayout>

<style>
  body {
    --header-max-width: 100rem;
  }

  .landing {
    margin-top: var(--theme-navbar-height);
  }

  .hero {
    @apply mx-5 mt-12 mb-20 flex flex-col justify-center gap-6;
  }

  .hero .title {
    -webkit-box-decoration-break: clone;
    -webkit-text-fill-color: transparent;
    color: unset;
    letter-spacing: -0.02em;
    background: linear-gradient(to right bottom, var(--theme-text-light) 30%, var(--theme-text));
    -webkit-background-clip: text;
    font-family: "Lexend Deca";

    @apply m-0 max-w-full p-0 text-center text-5xl font-bold;
    line-height: 1;
  }

  .hero .subtitle {
    -webkit-box-decoration-break: clone;
    -webkit-text-fill-color: transparent;
    color: unset;
    letter-spacing: -0.02em;
    background: linear-gradient(to right bottom, var(--theme-text-light) 30%, var(--theme-text));
    -webkit-background-clip: text;
    font-family: "Lexend Deca";

    @apply m-0 p-0 text-center text-2xl font-medium;
    line-height: 1.3;
  }

  .hero .description {
    @apply text-center text-base;
  }

  .hero .links {
    @apply flex justify-center;
  }

  .hero a.primary {
    background: linear-gradient(to right bottom, var(--theme-accent) 30%, var(--theme-text-accent));
    color: var(--theme-bg);
    text-shadow: var(--theme-text-accent) 0px 1px 0px;

    @apply flex rounded-3xl py-2 pl-6 pr-4 text-base transition-shadow hover:shadow-md;
  }

  /* Some shit happens with tailwind, and order of md/lg rules is changed */
  @media (min-width: 768px) {
    .hero .title {
      @apply text-6xl;
    }

    .hero .subtitle {
      @apply text-4xl;
      line-height: 1.5;
    }

    .hero .description {
      @apply text-lg;
    }

    .hero a.primary {
      @apply text-lg;
    }
  }

  @media (min-width: 1024px) {
    .hero {
      @apply mt-24 mb-32;
    }

    .hero .title {
      @apply text-8xl;
    }

    .hero .subtitle {
      @apply text-5xl;
      line-height: 1.5;
    }

    .hero .description {
      @apply text-xl;
    }
  }
</style>
