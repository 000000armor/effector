{
 "compilerOptions": {
  "target": "esnext",
  "module": "es2015",
  "allowSyntheticDefaultImports": true,
  "skipLibCheck": false,
  "noLib": false,
  "skipDefaultLibCheck": true,
  "alwaysStrict": true,
  "strict": true,
  "baseUrl": ".",
  "paths": {
   "effector": ["packages/effector"],
   "effector/*": ["src/*"]
  }
 },
 "typeAcquisition": {
  "enable": true
 },
 "include": ["src", "scripts", "packages", "bench"]
}
