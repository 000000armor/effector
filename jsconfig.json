{
  "compilerOptions": {
    "target": "esnext",
    "module": "es2015",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "noLib": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "effector": ["src/effector"],
      "effector/*": ["src/*"],
      "effector/flags": ["src/effector/flags.dev"]
    }
  },
  "typeAcquisition": {
    "enable": false
  },
  "include": ["src", "packages"]
}
