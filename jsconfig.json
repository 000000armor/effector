{
  "compilerOptions": {
    "target": "esnext",
    "module": "es2015",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "noLib": false,
    "skipDefaultLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "effector": ["packages/effector"],
      "effector/*": ["src/*"]
    }
  },
  "typeAcquisition": {
    "enable": false
  },
  "include": ["src", "scripts", "packages", "bench"]
}
