{
  "name": "effector",
  "version": 2,
  "github": {
    "silent": true
  },
  "alias": ["effector.now.sh"],
  "build": {
    "env": {
      "SITE_URL": "https://effector.now.sh"
    }
  },
  "builds": [
    {
      "src": "website/client/package.json",
      "use": "@now/static-build",
      "config": {"distDir": "build"}
    },
    {
      "src": "website/editor/package.json",
      "use": "@now/static-build",
      "config": {"distDir": "dist"}
    },
    {
      "src": "website/media/*.*",
      "use": "@now/static"
    }
  ],
  "rewrites": [
    {
      "source": "/favicon.ico",
      "destination": "/website/media/favicon.ico"
    },
    {
      "source": "/favicon-16x16.png",
      "destination": "/website/media/favicon-16x16.png"
    },
    {
      "source": "/favicon-32x32.png",
      "destination": "/website/media/favicon-32x32.png"
    },
    {
      "source": "/android-chrome-192x192.png",
      "destination": "/website/media/android-chrome-192x192.png"
    },
    {
      "source": "/android-chrome-512x512.png",
      "destination": "/website/media/android-chrome-512x512.png"
    },
    {
      "source": "/apple-touch-icon.png",
      "destination": "/website/media/apple-touch-icon.png"
    },
    {
      "source": "/safari-pinned-tab.svg",
      "destination": "/website/media/safari-pinned-tab.svg"
    },
    {
      "source": "/site.webmanifest",
      "destination": "/website/media/site.webmanifest"
    },
    {"source": "/try/(?<file>[^/]+)", "destination": "/website/editor/$file"},
    {
      "source": "/try/?(?<qr>[^/]*)",
      "destination": "/website/editor/index.html?$qr"
    },
    {"source": "/en/(.*)", "destination": "https://effector.now.sh/docs/$1"}
  ],
  "redirects": []
}
